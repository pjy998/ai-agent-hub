{
  "name": "ai-agent-vscode",
  "displayName": "AI Agent Hub",
  "description": "AI-powered coding assistant with project analysis, C# coding standards, and intelligent workflow automation for VS Code",
  "version": "0.0.18",
  "publisher": "jieky",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "keywords": [
    "ai",
    "assistant",
    "coding",
    "analysis",
    "csharp",
    "standards",
    "refactor",
    "copilot",
    "mcp",
    "automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pjy998/ai-agent-hub.git"
  },
  "bugs": {
    "url": "https://github.com/pjy998/ai-agent-hub/issues"
  },
  "homepage": "https://github.com/pjy998/ai-agent-hub#readme",
  "license": "MIT",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished",
    "onLanguage"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-agent-hub.analyzeSelf",
        "title": "AI Agent Hub: Analyze Self",
        "category": "AI Agent Hub"
      },
      {
        "command": "ai-agent-hub.generateReport",
        "title": "AI Agent Hub: Generate Analysis Report",
        "category": "AI Agent Hub"
      },
      {
        "command": "ai-agent-hub.viewRecommendations",
        "title": "AI Agent Hub: View Recommendations",
        "category": "AI Agent Hub"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "ai-agent-hub.analyzeSelf",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "ai-agent-hub.generateReport",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "ai-agent-hub.viewRecommendations",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "chatParticipants": [
      {
        "id": "ai-agent.coding",
        "name": "coding",
        "description": "AI coding assistant"
      },
      {
        "id": "ai-agent.refactor",
        "name": "refactor",
        "description": "Code refactoring assistant"
      },
      {
        "id": "ai-agent.requirements",
        "name": "requirements",
        "description": "Requirements analysis assistant"
      },
      {
        "id": "ai-agent.analyze",
        "name": "analyze",
        "description": "Project self-analysis assistant"
      },
      {
        "id": "ai-agent.config",
        "name": "config",
        "description": "Dynamic configuration generator for multi-language analysis"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "npm run compile",
    "package": "vsce package",
    "publish": "vsce publish",
    "vscode:prepublish": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.0"
  }
}